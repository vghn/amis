#!/usr/bin/env bash

# Bash strict mode
set -euo pipefail
IFS=$'\n\t'

# DEBUG
[ -z "${DEBUG:-}" ] || set -x

# System VARs
APPDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)"
TMPDIR=$(mktemp -d 2>/dev/null || mktemp -d -t 'tmp')
NOW="$(date +"%Y%m%d_%H%M%S")"
VERSION=$(git --git-dir="${APPDIR}/.git" --work-tree="${APPDIR}" describe --always --tags)
export APPDIR TMPDIR NOW VERSION

# Decrypt .env
# shellcheck disable=1090
. <( ( echo "$ENCRYPT_KEY" | base64 --decode ) |  gpg --batch --yes --decrypt --passphrase-fd 0 .env.gpg ) 2>/dev/null || true

# Detect environment
GIT_BRANCH="${TRAVIS_BRANCH:-$(git symbolic-ref --short HEAD)}"
if [[ -n "${ENVTYPE:-}" ]]; then
  ENVTYPE="$ENVTYPE"
elif [[ -n "${GIT_BRANCH:-}" ]]; then
  if [[ "$GIT_BRANCH" == 'master' ]]; then
    ENVTYPE='production'
  else
    ENVTYPE="$GIT_BRANCH"
  fi
else
  ENVTYPE=${ENVTYPE:-production}
fi
export ENVTYPE GIT_BRANCH

# Load functions
if [[ -d "${APPDIR}/shlib" ]]; then
  # shellcheck disable=1090
  for file in "${APPDIR}"/shlib/*.sh; do . "$file"; done
fi

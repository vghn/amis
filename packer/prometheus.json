{
  "variables": {
    "version": "",
    "ansible_repo": ""
  },
  "builders": [
    {
      "name": "Prometheus",
      "type": "amazon-ebs",
      "ami_name": "Prometheus_{{user `version`}}_{{timestamp}}",
      "ami_description": "Prometheus Image ({{user `version`}})",
      "source_ami_filter": {
        "filters": {
          "architecture": "x86_64",
          "root-device-type": "ebs",
          "virtualization-type": "hvm",
          "block-device-mapping.volume-type": "gp2",
          "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "run_tags": {
        "Name": "Prometheus AMI",
        "Group": "vgh",
        "Project": "vgh",
        "Packer": "true"
      },
      "tags": {
        "Name": "Prometheus AMI",
        "Group": "vgh",
        "Project": "vgh",
        "Packer": "true"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 5; done"
    },{
      "execute_command": "{{ .Vars }} sudo -E bash -e '{{ .Path }}'",
      "inline": [
        "export DEBIAN_FRONTEND=noninteractive",
        "apt-get update && apt-get -qy -o Dpkg::Options::='--force-confdef' -o Dpkg::Options::='--force-confold' dist-upgrade && apt-get -y autoremove --purge"
      ],
      "type": "shell"
    },{
      "type": "ansible",
      "host_alias": "prometheus",
      "groups": [
        "vgh",
        "aws",
        "docker"
      ],
      "playbook_file": "../ansible/site.yml",
      "ansible_env_vars": [
        "ANSIBLE_ROLES_PATH=~/.ansible/roles:../ansible/roles"
      ]
    }
  ]
}
